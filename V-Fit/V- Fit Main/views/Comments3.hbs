      </header>
    <section>
    <div class="container">
        
        
        <div class="row">
            {{#each results}}
            <div class="col-sm-5 col-md-6 col-12 pb-4">
                
                
                <div class="comment mt-4 text-justify float-left okksir"> <img src="https://i.imgur.com/CFpa3nK.jpg" alt="" class="rounded-circle" width="40" height="40">
                    <h4>{{name}}</h4>{{id}} <br>
                    <p>{{Comment_text}}</p>
                </div>
                
            </div>
            {{/each}}
        </div>
    </div>
    <form action="/cp4" method="post">
     <div class="yuiiy">
    <button type="submit" class="flex mx-auto mt-20 text-white bg-red-500 border-0 py-2 px-8 focus:outline-none hover:bg-red-600 rounded text-lg">Click to post comment</button>
    </div>  
    </form> 
</section>
